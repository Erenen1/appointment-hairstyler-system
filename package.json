{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "node dist/app.js",
    "start:prod": "NODE_ENV=production && node dist/app.js",
    "start:dev": "cross-env NODE_ENV=development nodemon --watch src --exec ts-node src/app.ts",
    "dev": "nodemon -e ts --exec 'tsc -p ./tsconfig.json && node ./dist/app.js'",
    "build": "tsc",
    "build:prod": "NODE_ENV=production tsc",
    "test": "cross-env NODE_ENV=test jest",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage",
    "test:ci": "cross-env NODE_ENV=test jest --ci --coverage --watchAll=false",
    "test:setup": "docker-compose -f ../docker-compose-test.yml up --build --remove-orphans",
    "test:teardown": "docker-compose -f ../docker-compose-test.yml down --remove-orphans",
    "test:full": "npm run test:setup && sleep 20 && npm run test:ci && npm run test:teardown",
    "swagger": "swagger-jsdoc -d swagger.config.js -o swagger.json",
    "migrate": "npx sequelize-cli db:migrate",
    "migrate:undo": "npx sequelize-cli db:migrate:undo",
    "migrate:status": "npx sequelize-cli db:migrate:status",
    "migrate:create": "npx sequelize-cli migration:generate --name",
    "test:dashboard": "cross-env NODE_ENV=test jest tests/controllers/dashboard.test.ts",
    "test:dashboard:watch": "cross-env NODE_ENV=test jest tests/controllers/dashboard.test.ts --watch",
    "test:dashboard:coverage": "cross-env NODE_ENV=test jest tests/controllers/dashboard.test.ts --coverage"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.0",
    "sequelize": "^6.37.7",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.0.3",
    "@types/pg": "^8.15.4",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "cross-env": "^7.0.3",
    "nodemon": "^3.1.10",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
